{
  "name": "unreal-class-creator",
  "displayName": "Unreal Class Creator",
  "description": "Adds new C++ classes for Unreal Engine via a custom UI and can regenerate the project without the editor.",
  "version": "1.2.0",
  "publisher": "geekrelief",
  "icon": "resources/icon.png",
  "repository": { 
    "type": "git",
    "url": "https://github.com/geekrelief/vscode_unreal_class_gen.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Unreal Class Creator",
      "properties": {
        "unrealClassCreator.defaultBuildTask": {
          "type": "string",
          "default": "",
          "description": "The default task to run after creating a class."
        },
        "unrealClassCreator.copyrightText": {
          "type": "string",
          "default": "Copyright Â© ${year} Your Name. All rights reserved.",
          "description": "The copyright notice to include at the top of generated files."
        },
        "unrealClassCreator.enginePath": {
          "type": "string",
          "default": "",
          "description": "The full path to Unreal Engine."
        },
        "unrealClassCreator.projectType": {
          "type": "string",
          "default": "VSCode",
          "description": "The type of project to generate (VisualStudio solution, VSCode workspace)."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "unreal-class-creator",
          "title": "New Unreal C++ Class",
          "icon": "resources/unreal.svg"
        }
      ]
    },
    "views": {
      "unreal-class-creator": [
        {
          "icon": "resources/unreal.svg",
          "type": "webview",
          "id": "unrealClassCreatorPanel",
          "name": ""
        }
      ]
    },
    "commands": [
      {
        "command": "unreal.createClass",
        "title": "Create New Unreal Class"
      },
      {
        "command": "unreal.showMenu",
        "title": "Show Configuration Menu"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}